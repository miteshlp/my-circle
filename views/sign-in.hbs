<div class=" d-flex flex-column">
  <script src="./dist/js/demo-theme.min.js?1674944402"></script>
  <div class="page page-center">
    <div class="container container-tight py-4">
      <h4 class="text-danger">{{messages}}</h4>
      <div class="card card-md">
        <div class="card-body">
          <h2 class="h2 text-center mb-4">Login to your account</h2>
          <form action="/sign-in" method="post" autocomplete="off" novalidate>
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input type="email" class="form-control" name="email" placeholder="your@email.com" autocomplete="off">
            </div>
            <div class="mb-2">
              <label class="form-label">
                Password
                <span class="form-label-description">
                  <a href="">I forgot password</a>
                </span>
              </label>
                <input type="password" class="form-control" name="password" placeholder="Your password"
                  autocomplete="off">
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">Sign in</button>
            </div>
          </form>
        </div>
      </div>
      <div class="text-center text-muted mt-3">
        Don't have account yet? <a href="/sign-up" tabindex="-1">Sign up</a>
      </div>
    </div>
  </div>

  <script src="./dist/js/tabler.min.js?1674944402" defer></script>
  <script src="./dist/js/demo.min.js?1674944402" defer></script>
  <script src="javascripts/public/sign-in.js" defer></script>

</div>