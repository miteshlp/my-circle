<script src="/dist/js/demo-theme.min.js?1674944402"></script>
<div class="page">
    <!-- Navbar -->
    <div class="page-wrapper">
        <!-- Page header -->
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <h2 class="page-title">
                            Users
                        </h2>
                        <div class="text-muted mt-1">{{userList.length}} people</div>
                    </div>
                    <!-- Page title actions -->
                    <div class="col-auto ms-auto d-print-none">
                        <div class="d-flex">
                            <input type="search" id="searchUser" title="Search user by name or email" class="form-control d-inline-block w-9"
                                placeholder="Search userâ€¦" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page body -->
        <div class="page-body">
            <div class="container-xl">
                <div class="row row-cards">
                    {{#each userList}}
                    <div class="col-md-6 col-lg-3">
                        <div class="card">
                            <div class="card-body p-4 text-center">
                                {{!-- <span class="avatar avatar-xl mb-3 rounded"
                                    style="background-image: url({{profileImage.path}})"></span> --}}
                                <img src="{{path}}" alt="no image" height="100px" width="100px">
                                <br><br>
                                <h3 class="m-0 mb-1">{{capitalize name.full}}</h3>
                                <div class="mt-3">
                                    <span class="badge bg-purple-lt">Total Posts : {{posts}}</span>
                                    <span class="badge bg-purple-lt">Saved Posts :{{savedPosts}}</span>
                                </div>
                                <div class="mt-3">
                                    <span class="badge bg-purple-lt">{{capitalize account_privacy}}</span>
                                    {{#if isFollowed}}
                                    <span class="badge bg-success-lt">{{capitalize isFollowed.status}}</span>
                                    {{else}}
                                    <span class="badge bg-info-lt follow" data-id="{{_id}}">follow</span>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{!-- Pagination --}}
                <br><br><div class="d-flex">
                    <ul class="pagination ms-auto">
                        {{{pagination "getValue" obj}}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/users/list.js" defer></script>