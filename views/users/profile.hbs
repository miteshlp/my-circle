<form id="editUserForm" enctype="multipart/form-data">
    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="row g-0">
                    <div class="col d-flex flex-column">
                        <div class="card-body">
                            <h4 class="card-title">Profile Details</h4>
                            <div class="row align-items-center">
                                <div class="col-auto"><img src="{{path}}" alt="no image"
                                        height="100px" width="100px">
                                </div>
                                <div class="col-auto"><a href="#" class="btn">
                                        <div class="mb-3">
                                            <input class="form-control" name="aavtar" type="file" id="formFile">
                                        </div>
                                    </a></div>
                            </div>
                            <br>
                            <div class="row g-3">
                                <div class="col-md">
                                    <div class="form-label">First Name</div>
                                    <input type="text" class="form-control" name="firstName" value="{{user.name.first}}">
                                </div>
                                <div class="col-md">
                                    <div class="form-label">Last Name</div>
                                    <input type="text" class="form-control" name="lastName" value="{{user.name.last}}">
                                </div>
                            </div>
                            <div class="form-label mt-4">Email</div>
                            <div>
                                <div class="row g-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control w-auto" name="email"
                                            value="{{user.email}}" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent mt-auto">
                            <div class="btn-list justify-content-end">
                                <a href="#" class="btn" onclick="history.back()">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<h4>{{messages}}</h4>
<script src="/javascripts/users/profile.js" defer></script>